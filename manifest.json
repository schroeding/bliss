{
	"manifest_version": 2,

	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "0.98rc1",

	"default_locale": "en",

	"icons": {
		"32": "media/icon-cyan.svg"
	},

	"background": {
		"scripts": ["filter.js"]
	},

	"browser_action": {
		"browser_style": true,
		"default_popup": "config_popup/config_popup.html",
		"default_icon": {
			"32": "media/icon.svg"
		},
		"theme_icons": [
			{
				"light": "media/icon-dark.svg",
				"dark": "media/icon.svg",
				"size": 32
			}
		]
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "bliss@rumia.org",
			"strict_min_version": "72.0"
		}
	},

	"options_ui": {
		"browser_style": true,
		"page": "config_settings/config_settings.html"
	},

	"web_accessible_resources": ["media/placeholder_image.png", "common.js"],

	"permissions": ["webRequestBlocking", "webRequest", "<all_urls>", "storage"]
}
